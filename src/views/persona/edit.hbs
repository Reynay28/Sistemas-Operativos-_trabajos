<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Editando una persona</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{persona.id}}" method="post">
                    <div class="input-group mt-2">
                        <label for="name"class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="name" id="name" value="{{persona.name}}" placeholder="Ejemplo:Reyna Campos" autofocus required>
                    </div>
                       <div class="input-group mt-2">
                        <label for="age"class="input-group-text">Edad</label>
                        <input class="form-control" type="number" name="age" id="age"value="{{persona.age}}" >
                    </div>
                       <div class="input-group mt-2">
                        <label for="curp"class="input-group-text">Curp</label>
                        <input class="form-control" type="text" name="curp" id="curp" value="{{persona.curp}}" >
                    </div>
                       <div class="input-group mt-2">
                        <label for="rfc"class="input-group-text">Rfc</label>
                        <input class="form-control" type="text" name="rfc" id="rfc" value="{{persona.Rfc}}" >
                    </div>
                       <div class="input-group mt-2">
                        <label for="address"class="input-group-text">Direccion</label>
                        <input class="form-control" type="text" name="address" id="address" value="{{persona.address}}" >
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success">Actualizar</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>